<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dh="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:dt="clr-namespace:OpenTrackerNext.Core.DataTemplates;assembly=OpenTrackerNext.Core"
             x:Class="OpenTrackerNext.Editor.App"
             RequestedThemeVariant="Dark">

  <Application.DataTemplates>
    <dt:ViewLocator />  
  </Application.DataTemplates>

  <Application.Styles>
    <FluentTheme />
    <dh:DialogHostStyles />
    <StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Fluent/Fluent.xaml" />
    <StyleInclude Source="Views/Styles.axaml" />
    <StyleInclude Source="Views/Documents/DocumentStyles.axaml" />
    <StyleInclude Source="Views/Editors/EditorStyles.axaml" />
    <StyleInclude Source="Views/Tools/ToolStyles.axaml" />
  </Application.Styles>

</Application>